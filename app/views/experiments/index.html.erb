<p id="notice"><%= notice %></p>

<h1>Experiments</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Experiment</th>
      <th>Name</th>
      <th>Image</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiments.each do |experiment| %>
      <% if experiment.user == current_user %>
        <tr>
          <td><%= experiment.experiment_id %></td>
          <td><%= link_to experiment.name, experiment %></td>
          <td><%= experiment.image %></td>
          <td><%= experiment.user_id %></td>
          <!--
          <td><%= link_to 'Edit', edit_experiment_path(experiment) %></td>
          <td><%= link_to 'Destroy', experiment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          -->
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

